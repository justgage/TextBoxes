#text-box 

   .border:hover 
      border: 1px dashed $hover-color

   .border 
      border: 1px solid $bg-color

   .invisible-input 
      font-size: inherit
      font-style: inherit
      font-family: inherit
      font-weight: inherit
      background-color: transparent
      border: none;
      width: 100%
      color: inherit
      padding: 0.25em
      placeholder(($text-color + 60%))
      

   .invisible-input:hover
      outline-color: $hover-color
      background-color: $hover-color

   .invisible-input:focus
      outline-color: $hover-color
      background-color: $hover-color + 50%


   h2:hover
      cursor: pointer

   .add  
      font-size:2em;
      cursor: pointer
      text-align: center

   .add:hover
         background-color: $hover-color
   .add:active
      padding-top: 1px;

   .option
      width : 25%
      float : left
      &:hover
       background-color : $hover-color + 50%
         
