#text-box 
   .border 
      border: 1px solid $bg-color
      &:hover 
         border: 1px dashed $hover-color

   .invisible-input 
      font-size: inherit
      font-style: inherit
      font-family: inherit
      font-weight: inherit
      background-color: transparent
      border: none;
      width: 100%
      color: inherit
      padding: 0.25em
      placeholder(($text-color + 60%))
      &:hover
         outline-color: $hover-color
         background-color: $hover-color
      &:focus
         outline-color: $hover-color
         background-color: $hover-color + 50%

   h2:hover
      cursor: pointer

   .add  
      font-size:1em;
      cursor: pointer
      text-align : center
      border-top : 2px dashed $text-color + 60%
      border-bottom : 2px dashed $text-color + 60%
      margin:1em
      &:hover
         background-color: $hover-color
         border-bottom : 2px solid $text-color+ 60%
         border-top : 2px solid $text-color + 60%

   .option
      width : 30%
      margin: 0 auto;
      float : left
      padding : 1%;
      background-color : $hover-color + 50%
      &:hover
       background-color : $hover-color - 10%

   textarea.noscrollbars 
      overflow: hidden;
      height: 100px;

   .clearfix 
      clear : both;
